<rxui:ReactiveUserControl xmlns="https://github.com/avaloniaui"
						  xmlns:vm="using:AppBanHang.ViewModels.Views"
						  xmlns:m="using:AppBanHang.Models"
						  xmlns:rxui="http://reactiveui.net"
						  xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
						  xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
						  xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
						  mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
						  x:Class="AppBanHang.Views.PaymentView"
						  x:DataType="vm:PaymentViewModel">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="*"></ColumnDefinition>
			<ColumnDefinition Width="350"></ColumnDefinition>
		</Grid.ColumnDefinitions>
		<ListBox Grid.Column="0" ItemsSource="{Binding Products}">
			<ListBox.ItemsPanel>
				<ItemsPanelTemplate>
					<UniformGrid Columns="3"/>
				</ItemsPanelTemplate>
			</ListBox.ItemsPanel>
			<ListBox.ItemTemplate>
				<DataTemplate DataType="{x:Type m:Product}">
					<Border HorizontalAlignment="Center" VerticalAlignment="Center" Width="{StaticResource ItemBoxWidth}" Height="{StaticResource ItemBoxHeight}">
						<TextBlock Text="{Binding Name}" HorizontalAlignment="Center" VerticalAlignment="Center"></TextBlock>
					</Border>
				</DataTemplate>
			</ListBox.ItemTemplate>
		</ListBox>
		<StackPanel Grid.Column="1" Spacing="15" HorizontalAlignment="Center">
			<TextBlock Text="Thanh toán" FontSize="{StaticResource ViewTitleFontSize}" HorizontalAlignment="Center" FontWeight="Bold"/>
			<ListBox>
				
			</ListBox>
			<StackPanel Orientation="Vertical" HorizontalAlignment="Left" Spacing="{StaticResource SiderComponentsSpacing}">
				<StackPanel.Styles>
					<Style Selector="TextBlock">
						<Setter Property="FontSize" Value="{StaticResource ViewContentFontSize}"/>
					</Style>
					<Style Selector="StackPanel > Button">
						<Setter Property="FontSize" Value="{StaticResource ViewContentFontSize}"/>
						<Setter Property="Width" Value="350"/>
						<Setter Property="HorizontalContentAlignment" Value="Center"/>
					</Style>
					<Style Selector="TextBox">
						<Setter Property="Width" Value="300"></Setter>
					</Style>
				</StackPanel.Styles>
				<StackPanel Spacing="{StaticResource SiderComponentsSpacing}" HorizontalAlignment="Center">
					<TextBlock Text="Số lượng" Margin="15, 0, 0, 0"/>
					<TextBox x:Name="numberTxtBox" IsEnabled="False"/>
				</StackPanel>
				<StackPanel Orientation="Vertical">
					<Button x:Name="addPaymentBtn" Content="Thêm" Command="{Binding AddPaymentCommand}" IsEnabled="False"/>
					<Button x:Name="cancelPaymentBtn" Content="Hủy đơn" IsEnabled="False" Background="Red"/>
					<Button x:Name="confirmPaymentBtn" Content="Xác nhận đơn" IsEnabled="False"/>
					<Button x:Name="checkPaymentStatusBtn" Content="Xác nhận thanh toán" IsEnabled="False"/>
				</StackPanel>
			</StackPanel>
		</StackPanel>
	</Grid>
</rxui:ReactiveUserControl>
