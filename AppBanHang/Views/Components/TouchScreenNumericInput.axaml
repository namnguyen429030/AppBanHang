<rxui:ReactiveUserControl xmlns="https://github.com/avaloniaui"
			 xmlns:rxui="http://reactiveui.net"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="AppBanHang.Views.Components.TouchScreenNumericInput">
	<Grid>
		<TextBox x:Name="numberInput"
				 Width="150"
				 Height="25"
				 VerticalContentAlignment="Center"
				 Watermark="0"
				 GotFocus="ShowNumpad"
				LostFocus="HideNumpad"
				 IsTabStop="False">
		</TextBox>
		<Popup Placement="Bottom" x:Name="numpadPopup" LostFocus="HideNumpad">
			<Grid ColumnDefinitions="50,50,50"
			  RowDefinitions="50,50,50,50,50"
			  HorizontalAlignment="Center">
				<Grid.Styles>
					<Style Selector="Button">
						<Setter Property="HorizontalAlignment" Value="Stretch"/>
						<Setter Property="VerticalAlignment" Value="Stretch"/>
						<Setter Property="HorizontalContentAlignment" Value="Center"/>
						<Setter Property="VerticalContentAlignment" Value="Center"/>
						<Setter Property="Margin" Value="1"/>
					</Style>
				</Grid.Styles>

				<Button Grid.Row="0" Grid.Column="0" Content="1"/>
				<Button Grid.Row="0" Grid.Column="1" Content="2"/>
				<Button Grid.Row="0" Grid.Column="2" Content="3"/>

				<Button Grid.Row="1" Grid.Column="0" Content="4"/>
				<Button Grid.Row="1" Grid.Column="1" Content="5"/>
				<Button Grid.Row="1" Grid.Column="2" Content="6"/>

				<Button Grid.Row="2" Grid.Column="0" Content="7"/>
				<Button Grid.Row="2" Grid.Column="1" Content="8"/>
				<Button Grid.Row="2" Grid.Column="2" Content="9"/>

				<Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Content="0"/>
				<Button Grid.Row="3" Grid.Column="2" Content="."/>

				<Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="3" Content="OK" FontWeight="Bold"/>
			</Grid>
		</Popup>
	</Grid>
</rxui:ReactiveUserControl>
